@using Entidades;
@model Observacion

@if (Session["usuario"] != null)
{
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">¿Cómo se resolvió esta observacion?</h4>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <center>
                    <label for="ObservacionInicial">Observación:</label>
                    <p id="ObservacionInicial"> @Model.observacion </p>
                </center>
                <center>
                    <label for="resObservacion">Resolución:</label>
                    <textarea class="form-control" rows="5" id="resObservacion"></textarea>
                </center>
            </div>
        </div>
        <div class="modal-footer">
            @if (((Usuario)Session["usuario"]).tieneAccesoA(Accesos.ResolverObservacion))
            {
                <button type="button" onclick="ResolverObservacion(@Model.idObservacion,@Model.detalle.idDetalle)" id="btnAceptarRes" class="btn btn-default">Resolver</button>
            }
            <button type="button" class="btn btn-default" id="btnEspereRes" style="display:none;">Espere ...</button>
            <button type="button" class="btn btn-default" data-dismiss="modal" onclick="ExpandirObservaciones('@Model.detalle.idDetalle')" style="display:none;" id="btnObsAceptarRes">Aceptar</button>

        </div>
    </div>
}
else
{
    <div class="modal-content">
        <div class="modal-body">
            <div class="form-group">
                <center>
                    <h3>Su sesión ha expirado, ingrese nuevamente.</h3>
                </center>
            </div>
        </div>
        <div class="modal-footer">
            <div class="col-sm-6 contenido-derecha">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
            </div>

        </div>
    </div>

}