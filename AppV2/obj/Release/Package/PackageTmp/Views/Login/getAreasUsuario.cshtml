
@using Entidades;
@model IEnumerable<Area>

<div class="row">
    <div class="col-sm-12">
        <label for="nombrePresupuesto" class="control-label col-sm-5">Nombre usuario</label>
        <div class="form-group col-sm-7">
            <input class="form-control" type="text" name="" disabled="disabled" id="nombreusuario" value="@ViewBag.codusuario" />
        </div>
        <label for="idSede" class="control-label col-sm-5">Sede</label>
        <div class="form-group col-sm-7">
            <select class="form-control" id="comboidSede" onchange="cambioSedeCrear()">
                @foreach (Sede prio in ViewBag.sedes)
                {
                    <option value="@prio.codSede" @(prio.codSede==ViewBag.idSede?"selected=\"selected\"":"")>@prio.desSede</option>
                }
            </select>
        </div>
        <div class="col-sm-12" id="areasSede">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <center>Lista de Áreas Registradas</center>
                </div>
                <div class="panel-body">
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            bool check = false;
                            if (ViewBag.rptaAreasUsuario != null)
                            {
                                foreach (var acc in ((List<Area>
                                    )ViewBag.rptaAreasUsuario))
                                {
                                    if (item.codArea == acc.codArea)
                                    {
                                        check = true;
                                    }

                                }
                            }
                            <div class="row">
                                <div class="col-sm-2">
                                    <input type="checkbox" name="accArea" id="cbox@(item.codArea)" @(check ? "checked=\"checked\"" : "") value="@(item.codArea)">
                                </div>
                                <div class="col-sm-10">
                                    @item.desArea
                                </div>
                            </div>

                        }
                    }

                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-sm-12">
                            <button type="button" style="float:right;" class="btn btn-success btn-sm" onclick="GuardarAreasUsuario($('#nombreusuario').val())"> Guardar </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>



