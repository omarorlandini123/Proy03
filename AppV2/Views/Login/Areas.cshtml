@using Entidades;
@model IEnumerable<Usuario>
<div class="row">
    <br />
    <div class="col-sm-6 panel-principal">
        <h3>Perfiles <strong>  </strong></h3>
        
            <button type="button" class="btn btn-success btn-xs" onclick="MostrarCrearNuevoUsuario()">Registrar Nuevo usuario</button>
        
        <br /><br />
       
            <div class="list-group">
                @if (Model!=null && Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        <div class="list-group-item">
                            <div class="row">
                                <a class="col-sm-6" href="javascript:getAreasUsuario(@ViewBag.idSede,'@item.usuario')">@item.usuario</a>
                                <button type="button" class="col-sm-1 col-sm-offset-4 btn btn-danger btn-xs" onclick="eliminarAreasUsuario(@item.usuario)">X</button>
                            </div>
                        </div>
                    }
                }
            </div>
        
    </div>
    <div class="col-sm-6 panel-secundario" id="listaAreas">

    </div>

</div>
