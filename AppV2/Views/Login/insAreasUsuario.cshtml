@model int

@if (Session["usuario"] != null)
{
    if (Model == 1)
    {
        <div class="modal-content">
            <div class="modal-body">
                <div class="form-group">
                    <center>
                        <h3>Se guardo el usuario y áreas correctamente</h3>
                    </center>
                </div>
            </div>
            <div class="modal-footer">
                <div class="col-sm-6 contenido-derecha">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Aceptar</button>
                </div>

            </div>
        </div>
    }
    else if (Model == 100)
    {
        <div class="modal-content">
            <div class="modal-body">
                <div class="form-group">
                    <center>
                        <h3>No se encuentra el usuario en el sistema principal, asegurece que el usuario se encuentre en el sevicio de Active Directory</h3>
                    </center>
                </div>
            </div>
            <div class="modal-footer">
                <div class="col-sm-6 contenido-derecha">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Aceptar</button>
                </div>

            </div>
        </div>
    }
    else if (Model == 101)
    {
        <div class="modal-content">
            <div class="modal-body">
                <div class="form-group">
                    <center>
                        <h3>No se pudo conectar con el servicio de validación</h3>
                    </center>
                </div>
            </div>
            <div class="modal-footer">
                <div class="col-sm-6 contenido-derecha">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Aceptar</button>
                </div>

            </div>
        </div>

    }
    else
    {

        <div class="modal-content">
            <div class="modal-body">
                <div class="form-group">
                    <center>
                        <h3>No se pudo registrar el usuario</h3>
                    </center>
                </div>
            </div>
            <div class="modal-footer">
                <div class="col-sm-6 contenido-derecha">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Aceptar</button>
                </div>

            </div>
        </div>
    }
}
else
{
    <div class="modal-content">
        <div class="modal-body">
            <div class="form-group">
                <center>
                    <h3>Su sesión ha expirado, ingrese nuevamente.</h3>
                </center>
            </div>
        </div>
        <div class="modal-footer">
            <div class="col-sm-6 contenido-derecha">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
            </div>

        </div>
    </div>

}




