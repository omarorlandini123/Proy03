@model IEnumerable<Entidades.SubClase>

<div class="col-sm-12">
    <div class="panel panel-primary">
        <div class="panel-heading">
            SubClases permitidas para gasto de capital
        </div>
        <div class="panel-body">

            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                    <div class="row">
                        @if (Model != null)
                        {
                            <table class="table table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>Cod Clase</th>
                                        <th>Des Clase</th>
                                        <th>Cod SubClase</th>
                                        <th>Des SubClase</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Entidades.SubClase item in Model)
                                    {
                                        <tr>
                                            <td>@(string.Format("{0:00}", int.Parse(item.clase.codClase)))</td>
                                            <td>@item.clase.desClase</td>
                                            <td>@(string.Format("{0:00}", int.Parse(item.codSubClase)))</td>
                                            <td>@item.desSubClase</td>
                                            <td>
                                                <div class="col-sm-12" style="text-align:right;">
                                                    <button type="button" class="btn btn-default" onclick="EliminarClase(@ViewBag.idSede,@ViewBag.idPresupuesto,'@(string.Format("{0:00}", int.Parse(item.clase.codClase)))@(string.Format("{0:00}", int.Parse(item.codSubClase)))')">Eliminar</button>
                                                </div>
                                            </td>                                            
                                        </tr>
                                    
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <center><h3>No se encontraron resultados, Agregue un ítem para empezar</h3></center>
                        }
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-12" style="text-align:right;">
                            <button type="button" class="btn btn-default" onclick="ShowAgregarSubClase(@ViewBag.idSede,@ViewBag.idPresupuesto)">Agregar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

